{
  "name": "sms-style-converter",
  "displayName": "SMS 스타일 변환기",
  "description": "스타일 태그 내의 CSS를 기존 클래스로 변환합니다.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./extension.js",
  "icon": "images/app_icon.png",
  "contributes": {
    "commands": [
      {
        "command": "sms-style-converter.convertStyle",
        "title": "스타일 변환하기"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "sms-style-converter.convertStyle",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "sms-style-converter.convertStyle",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorHasSelection"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.89.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "clean-css": "^5.3.2",
    "css": "^3.0.0"
  }
}
